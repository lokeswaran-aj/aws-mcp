{
  "name": "aws-mcp",
  "version": "0.0.1",
  "description": "AWS MCP Server",
  "scripts": {
    "build": "tsc --build --verbose tsconfig.build.json && tsc-alias -p tsconfig.json",
    "start": "node ./dist/index.js",
    "dev": "ts-node-dev --project tsconfig.dev.json -r tsconfig-paths/register --transpile-only --respawn --exit-child src/server.ts",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write ."
  },
  "keywords": [],
  "author": "Lokeswaran Aruljothy",
  "license": "MIT",
  "packageManager": "pnpm@10.11.1",
  "dependencies": {
    "@aws-sdk/client-ec2": "^3.826.0",
    "@aws-sdk/client-rds": "^3.826.0",
    "@aws-sdk/client-s3": "^3.826.0",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "dotenv": "^16.5.0",
    "fastmcp": "^3.3.0",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@eslint/json": "^0.12.0",
    "@eslint/markdown": "^6.5.0",
    "@swc/core": "^1.11.31",
    "@types/node": "^22.15.30",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "globals": "^16.2.0",
    "prettier": "^3.5.3",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1"
  }
}
