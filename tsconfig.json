{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "outDir": "dist",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
